COMMAND=$1
source /etc/profile.d/SWARM.sh

case $1 in

	start)
        echo "Starting SWARM"
        $SWARM_DIR/swarm
        ;;
    restart)
           echo "Restarting SWARM"
           sudo screen -S miner -X quit
           sleep 3
           $SWARM_DIR/swarm
        ;;
    stop)
        echo "Stopping SWARM"
        sudo screen -S miner -X quit
        ;;
    *)
          echo "command does not exist"
          echo "availble commands:"
          echo "start"
          echo "restart"
          echo "stop"
        ;;
esac